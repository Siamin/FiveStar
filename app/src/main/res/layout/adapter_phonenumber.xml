<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp">



        <TextView
            android:id="@+id/detilesPhoneNumberindex"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".8"
            android:text="1"
            android:layout_margin="3dp"
            android:gravity="center"/>


        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5">


                <EditText
                    android:id="@+id/detilesPhoneNumberNumber"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/spinner_border"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/farsi"
                    android:drawableTint="@color/colorGaryLite1"
                    android:ems="10"
                    android:inputType="number"
                    android:padding="10dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dp"
                    android:background="@color/colorGaryLite"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:fontFamily="@font/farsi"
                    android:text="@string/Number"
                    app:layout_anchor="@id/detilesPhoneNumberNumber"
                    app:layout_anchorGravity="top|right" />


        </androidx.coordinatorlayout.widget.CoordinatorLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/detilesPhoneNumberSubmit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:layout_gravity="center"
            android:elevation="5dp"
            app:cardBackgroundColor="@color/colorRed"
            app:cardCornerRadius="15dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/farsi"
                    android:layout_gravity="center"
                    android:textColor="@color/colorWhite"
                    android:text="@string/Registered"/>
        </androidx.cardview.widget.CardView>



</LinearLayout>