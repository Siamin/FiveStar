<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4">


        <EditText
            android:id="@+id/adapterTextMessageBody"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/spinner_border"
            android:drawablePadding="8dp"
            android:fontFamily="@font/farsi"
            android:drawableTint="@color/colorGaryLite1"
            android:ems="10"
            android:inputType="text"
            android:padding="10dp" />


        <TextView
            android:id="@+id/adapterTextMessageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:background="@color/colorGaryLite"
            android:paddingLeft="8dp"
            android:fontFamily="@font/farsi"
            android:paddingRight="8dp"
            android:text="@string/title"
            app:layout_anchor="@id/adapterTextMessageBody"
            app:layout_anchorGravity="top|right" />


    </androidx.coordinatorlayout.widget.CoordinatorLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/adapterTextMessageSubmit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:orientation="horizontal"
        android:elevation="5dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/colorRed"
        app:cardCornerRadius="15dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:drawablePadding="5dp"
            android:fontFamily="@font/farsi"
            android:textColor="@color/colorWhite"
            android:text="@string/submit"/>
    </androidx.cardview.widget.CardView>
    

    
</LinearLayout>