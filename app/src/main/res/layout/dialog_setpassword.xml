<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:background="@drawable/bg_dialogs"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layoutDirection="rtl"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/dialogClose"
            android:layout_width="100dp"
            android:layout_height="6dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="8dp"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/colorGary"
            android:textSize="18sp"
            app:cardBackgroundColor="@color/colorGary" />

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">


            <EditText
                android:id="@+id/dialogSetPasswordPassword"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:background="@drawable/spinner_border"
                android:drawableLeft="@drawable/ic_key_24"
                android:drawablePadding="8dp"
                android:drawableTint="@color/colorGaryLite1"
                android:ems="10"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/farsi"
                android:inputType="numberPassword"
                android:padding="10dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:background="@color/colorGaryLite"
                android:paddingLeft="8dp"
                android:fontFamily="@font/farsi"
                android:paddingRight="8dp"
                android:text="@string/newPassword"
                app:layout_anchor="@id/dialogSetPasswordPassword"
                app:layout_anchorGravity="top|right" />

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">


            <EditText
                android:id="@+id/dialogSetPasswordConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:fontFamily="@font/farsi"
                android:textColor="@color/colorBlack"
                android:background="@drawable/spinner_border"
                android:drawableLeft="@drawable/ic_key_24"
                android:drawablePadding="8dp"
                android:drawableTint="@color/colorGaryLite1"
                android:ems="10"
                android:inputType="numberPassword"
                android:padding="10dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:background="@color/colorGaryLite"
                android:paddingLeft="8dp"
                android:fontFamily="@font/farsi"
                android:paddingRight="8dp"
                android:text="@string/confirmNewPassword"
                app:layout_anchor="@id/dialogSetPasswordConfirmPassword"
                app:layout_anchorGravity="top|right" />

        </androidx.coordinatorlayout.widget.CoordinatorLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/dialogSetPasswordSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="60dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:elevation="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:cardBackgroundColor="@color/colorRed"
            app:cardCornerRadius="15dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:fontFamily="@font/farsi"
                android:text="@string/setPassword"
                android:textColor="@color/colorWhite"
                android:textSize="16dp" />

        </androidx.cardview.widget.CardView>


    </LinearLayout>


</FrameLayout>


