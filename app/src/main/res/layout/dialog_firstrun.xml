<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialogs"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="5dp"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/colorBlack"
        app:cardCornerRadius="3dp"/>


    <TextView
        android:id="@+id/dialogDefault_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:fontFamily="@font/farsi"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@color/colorGaryLite2"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@color/colorGaryLite" />


    <TextView
        android:id="@+id/dialogDefault_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal|right"
        android:padding="15dp"
        android:fontFamily="@font/farsi"
        android:textColor="@color/colorGaryLite2"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@color/colorGaryLite" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialogDefaultNotNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:fontFamily="@font/farsi"
            android:layout_gravity="center"
            android:text="@string/firstRunDialogBtnCancel"
            android:textColor="@color/colorGaryLite2"
            android:textSize="16dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/dialogDefault_okey"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_gravity="bottom|center"
            android:elevation="5dp"
            android:gravity="center"
            android:onClick="SubmitFirstSetting"
            android:orientation="horizontal"
            app:cardBackgroundColor="@color/colorRed"
            app:cardCornerRadius="20dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/setPassword"
                android:fontFamily="@font/farsi"
                android:textColor="@color/colorWhite"
                android:textSize="14dp" />
        </androidx.cardview.widget.CardView>




    </LinearLayout>




</LinearLayout>