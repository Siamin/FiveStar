<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <androidx.cardview.widget.CardView
        android:id="@+id/AddNewSystem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:onClick="AddNewSystem"
        android:gravity="center"
        android:elevation="5dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="30dp"
        app:cardBackgroundColor="@color/colorRed"
        app:cardCornerRadius="15dp">


        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/farsi"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:drawablePadding="5dp"
            android:drawableTint="@color/colorWhite"
            android:drawableLeft="@drawable/ic_baseline_add_circle_outline_24"
            android:textColor="@color/colorWhite"
            android:text="@string/AddSystem"/>
    </androidx.cardview.widget.CardView>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listSystems"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="9"/>
</FrameLayout>