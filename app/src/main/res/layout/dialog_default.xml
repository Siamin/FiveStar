<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialogs"
    android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layoutDirection="rtl"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialogDefault_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="@font/farsi"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@color/colorTextDialog"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorTextDialog" />


            <TextView
                android:id="@+id/dialogDefault_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal|right"
                android:padding="35dp"
                android:fontFamily="@font/farsi"
                android:textColor="@color/colorTextDialog"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorTextDialog" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_margin="6dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dialogDefault_okey"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/colorTextDialog"
                    android:textSize="16dp"
                    android:fontFamily="@font/farsi"
                    android:text="@string/Okey"/>

                <TextView
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorTextDialog" />

                <TextView
                    android:id="@+id/dialogDefault_cancle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:fontFamily="@font/farsi"
                    android:textColor="@color/colorTextDialog"
                    android:textSize="16dp"
                    android:text="@string/Cancle"/>

            </LinearLayout>


        </LinearLayout>

</LinearLayout>