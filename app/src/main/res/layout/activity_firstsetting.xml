<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorGaryLite">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorToolbar"
        app:titleTextColor="@color/colorBlack"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="@string/pageNameFirstSetting" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:orientation="vertical"
        android:padding="35dp"
        app:layout_constraintVertical_bias="1.0">


        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">


            <EditText
                android:id="@+id/firstSettingSystrmName"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:background="@drawable/spinner_border"
                android:drawableLeft="@drawable/ic_baseline_devices_other_24"
                android:drawablePadding="8dp"
                android:fontFamily="@font/farsi"
                android:drawableTint="@color/colorGaryLite1"
                android:ems="10"
                android:inputType="textPersonName"
                android:padding="10dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:background="@color/colorGaryLite"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:fontFamily="@font/farsi"
                android:text="@string/systemName"
                app:layout_anchor="@id/firstSettingSystrmName"
                app:layout_anchorGravity="top|right" />

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/firstSettingPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:background="@drawable/spinner_border"
                android:drawableLeft="@drawable/ic_baseline_phone_android_24"
                android:drawablePadding="8dp"
                android:drawableTint="@color/colorGaryLite1"
                android:ems="10"
                android:fontFamily="@font/farsi"
                android:inputType="phone"
                android:padding="10dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:background="@color/colorGaryLite"
                android:paddingLeft="8dp"
                android:fontFamily="@font/farsi"
                android:paddingRight="8dp"
                android:text="@string/phoneNumber"
                app:layout_anchor="@id/firstSettingPhoneNumber"
                app:layout_anchorGravity="top|right" />

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/firstSettingPinCode"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:background="@drawable/spinner_border"
                android:drawableLeft="@drawable/ic_baseline_fiber_pin_24"
                android:drawablePadding="8dp"
                android:drawableTint="@color/colorGaryLite1"
                android:ems="10"
                android:fontFamily="@font/farsi"
                android:inputType="textPersonName"
                android:padding="10dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:background="@color/colorGaryLite"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:fontFamily="@font/farsi"
                android:text="@string/pinCode"
                app:layout_anchor="@id/firstSettingPinCode"
                app:layout_anchorGravity="top|right" />


        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <include layout="@layout/view_spinners" />


        <androidx.cardview.widget.CardView
            android:id="@+id/AddNewSystem"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="bottom|center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:elevation="5dp"
            android:gravity="center"
            android:onClick="SubmitFirstSetting"
            android:orientation="horizontal"
            app:cardBackgroundColor="@color/colorRed"
            app:cardCornerRadius="15dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/register"
                android:fontFamily="@font/farsi"
                android:textColor="@color/colorWhite"
                android:textSize="14dp" />
        </androidx.cardview.widget.CardView>


    </LinearLayout>


</LinearLayout>